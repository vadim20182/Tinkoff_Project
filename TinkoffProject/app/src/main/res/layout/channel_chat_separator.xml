<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/channel_chat_separator_label_padding"
    android:id="@+id/channel_chat_separator_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background_color">

    <TextView
        android:id="@+id/channel_chat_separator_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/channel_chat_separator_label_padding"
        android:paddingBottom="@dimen/channel_chat_separator_label_padding"
        android:textColor="@android:color/white"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Topic" />
</androidx.constraintlayout.widget.ConstraintLayout>