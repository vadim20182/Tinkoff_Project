<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <android.example.tinkoffproject.message.customviews.FlexBoxLayout
        android:id="@+id/bottom_sheet_message_flexbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bottom_sheet_message_add_reaction"
            android:layout_width="@dimen/default_message_bottom_sheet_icon_size"
            android:layout_height="@dimen/default_message_bottom_sheet_icon_size"
            android:background="@android:color/black"
            android:padding="@dimen/default_message_bottom_sheet_padding"
            app:shapeAppearanceOverlay="@style/RoundedImageViewBottomSheet"
            app:srcCompat="@drawable/ic_baseline_add_reaction_24" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bottom_sheet_message_edit"
            android:layout_width="@dimen/default_message_bottom_sheet_icon_size"
            android:layout_height="@dimen/default_message_bottom_sheet_icon_size"
            android:background="@android:color/black"
            android:padding="@dimen/default_message_bottom_sheet_padding"
            app:shapeAppearanceOverlay="@style/RoundedImageViewBottomSheet"
            app:srcCompat="@drawable/ic_baseline_edit_24" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bottom_sheet_message_change_topic"
            android:layout_width="@dimen/default_message_bottom_sheet_icon_size"
            android:layout_height="@dimen/default_message_bottom_sheet_icon_size"
            android:background="@android:color/black"
            android:padding="@dimen/default_message_bottom_sheet_padding"
            app:shapeAppearanceOverlay="@style/RoundedImageViewBottomSheet"
            app:srcCompat="@drawable/ic_baseline_change_topic_24" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bottom_sheet_message_copy"
            android:layout_width="@dimen/default_message_bottom_sheet_icon_size"
            android:layout_height="@dimen/default_message_bottom_sheet_icon_size"
            android:background="@android:color/black"
            android:padding="@dimen/default_message_bottom_sheet_padding"
            app:shapeAppearanceOverlay="@style/RoundedImageViewBottomSheet"
            app:srcCompat="@drawable/ic_baseline_content_copy_24" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bottom_sheet_message_delete"
            android:layout_width="@dimen/default_message_bottom_sheet_icon_size"
            android:layout_height="@dimen/default_message_bottom_sheet_icon_size"
            android:background="@android:color/black"
            android:padding="@dimen/default_message_bottom_sheet_padding"
            app:shapeAppearanceOverlay="@style/RoundedImageViewBottomSheet"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

    </android.example.tinkoffproject.message.customviews.FlexBoxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>